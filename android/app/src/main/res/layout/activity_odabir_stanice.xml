<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OdabirStanice">

    <Button
        android:id="@+id/Stanica1"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:onClick="Stanica1_podaci"
        android:text="Stanica 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <Button
        android:id="@+id/Stanica2"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:onClick="Stanica2_podaci"
        android:text="Stanica 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <Button
        android:id="@+id/Stanica3"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:onClick="Stanica3_podaci"
        android:text="Stanica 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549" />

    <RadioButton
        android:id="@+id/OdabirTeks"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:text="Tekst ispis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749"

        />

    <RadioButton
        android:id="@+id/OdabirGraf"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:text="Prikaz grafova"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849"
/>


</android.support.constraint.ConstraintLayout>